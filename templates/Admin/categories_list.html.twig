{% extends 'base.html.twig' %}

{% block main %}
    <div class="btn-category">
        <a href="{{ path ('admin_insert_category')}}" class="btn-create">Créer Catégorie </a>
    </div>

    {% for category in categories %}
        <article class="article">
            <h2 style="color: {{ category.color }};">{{ category.title }}</h2>
            <a href="{{ path('admin_show_category', {'id': category.id}) }}">Voir plus_</a>
            <a href="{{ path ('admin_delete_category',{'id':category.id })}}">Voulez-vous supprimer cet article? </a>
        </article>
    {% endfor %}
{% endblock %}


{% block footer %}
    <footer>Coucou, je suis le footer</footer>
{% endblock %}

