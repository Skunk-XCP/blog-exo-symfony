<article>

{#    La boucle permet d'afficher l'intégralité des articles#}
    {% for article in articles %}
        <h1>{{ article.title }}</h1>
        <p>{{ article.description }}</p>
        <img src="{{ article.image }}" alt="">
        <a href={{ path('article', {'id': article.id }) }}>Voir le détail de l'article</a>
    {% endfor %}

</article>





